<h1>New Game!</h1>
<h3><%= @grid %></h3>

<form action="score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <div class="input-group p-3">
    <span class="input-group-text" id="basic-addon3">Word --></span>
    <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" name="word">
    <input type="submit" value="Let's play!">
  </div>

  <h3><%= @result %></h3>
</form>
